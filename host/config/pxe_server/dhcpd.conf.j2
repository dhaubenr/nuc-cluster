option space PXE;
option PXE.mtftp-ip    code 1 = ip-address;
option PXE.mtftp-cport code 2 = unsigned integer 16;
option PXE.mtftp-sport code 3 = unsigned integer 16;
option PXE.mtftp-tmout code 4 = unsigned integer 8;
option PXE.mtftp-delay code 5 = unsigned integer 8;
option arch code 93 = unsigned integer 16; # RFC4578

default-lease-time 86400;
max-lease-time 86400;

use-host-decl-names on;
ddns-update-style none;
one-lease-per-client true;
ignore client-updates;

authoritative;

option domain-name "nuc.all";
option domain-name-servers 192.168.3.1, 8.8.8.8, 8.8.4.4;

subnet 192.168.3.0 netmask 255.255.255.0 {
  range 192.168.3.100 192.168.3.200;
  option subnet-mask 255.255.255.0;
  option broadcast-address 192.168.3.255;
  option routers 192.168.3.1;
  next-server 192.168.3.1;

  class "UEFI-64-1" {
    match if substring(option vendor-class-identifier, 0, 20) = "PXEClient:Arch:00007";
    filename "netboot.xyz.efi";
  }

  class "UEFI-64-2" {
    match if substring(option vendor-class-identifier, 0, 20) = "PXEClient:Arch:00008";
    filename "netboot.xyz.efi";
  }

  class "UEFI-64-3" {
    match if substring(option vendor-class-identifier, 0, 20) = "PXEClient:Arch:00009";
    filename "netboot.xyz.efi";
  }

  class "Legacy" {
    match if substring(option vendor-class-identifier, 0, 20) = "PXEClient:Arch:00000";
    filename "netboot.xyz.kpxe";
  }
}

host nuc1 {
  hardware ethernet {{ mac.nuc1 }};
  fixed-address 192.168.3.11;
}

host nuc2 {
  hardware ethernet {{ mac.nuc2 }};
  fixed-address 192.168.3.12;
}

host nuc3 {
  hardware ethernet {{ mac.nuc3 }};
  fixed-address 192.168.3.13;
}

host nuc4 {
  hardware ethernet {{ mac.nuc4 }};
  fixed-address 192.168.3.14;
}
