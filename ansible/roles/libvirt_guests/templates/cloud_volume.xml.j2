<volume type='file'>
  <name>{{ guest_os_cloud_image }}.qcow2</name>
  <source>
  </source>
  <capacity unit='G'>10</capacity>
  <target>
    <path>{{ data_lv_mount_point }}/{{ libvirt_storage_directory }}/{{ libvirt_storage_pool }}/{{ guest_os_cloud_image }}.qcow2</path>
    <format type='qcow2'/>
    <permissions>
      <mode>0744</mode>
      <owner>{{ getent_passwd['libvirt-qemu'][1] }}</owner>
      <group>{{ getent_passwd['libvirt-qemu'][2] }}</group>
    </permissions>
  </target>
</volume>
