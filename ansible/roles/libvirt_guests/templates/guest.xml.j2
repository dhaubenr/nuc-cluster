<domain type='kvm'>
  <name>{{ inventory_hostname_short }}-k8s-{{ item }}</name>
  <memory unit='KiB'>8388608</memory>
  <vcpu>2</vcpu>
  <os>
    <type arch='x86_64'>hvm</type>
  </os>
  <clock offset='utc'/>
  <devices>
    <emulator>/usr/bin/kvm-spice</emulator>
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2' cache='none'/>
      <source file='{{ data_lv_mount_point }}/{{ libvirt_storage_directory }}/{{ libvirt_storage_pool }}/{{ inventory_hostname_short }}_k8s_{{ item }}.qcow2'/>
      <backingStore type='file' index='1'>
        <format type='qcow2'/>
        <source file='/var/lib/libvirt/images/{{ guest_os_cloud_image }}.qcow2'/>
        <backingStore/>
      </backingStore>
      <target dev='vda' bus='virtio'/>
    </disk>
    <disk type='file' device='cdrom'>
      <source file='/var/lib/libvirt/images/{{ inventory_hostname_short }}_k8s_{{ item }}.iso'/>
      <target dev='hdc'/>
      <readonly/>
    </disk>
    <interface type='network'>
      <mac address='{{ libvirt_network_guest_mac_prefix }}{{ "%02d" | format(host_index | int) }}:{{ "%02d" | format(item | int) }}'/>
      <source network='{{ libvirt_network_name }}' bridge='virbr1'/>
    </interface>
  </devices>
</domain>
